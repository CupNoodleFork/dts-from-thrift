{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./lib",
    "composite": true,
    "importHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "rootDirs": ["src/", "test/"]
  },
  "exclude": ["./test/", "./lib", "./typings"]
}
